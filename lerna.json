{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "lerna.json",
    "**/*.md",
    "**/package.json",
    "**/.npmrc",
    ".vscode",
    "examples/**/*",
    "tests/**/*"
  ],
  "command": {
    "publish": {
      "allowBranch": "master"
    }
  }
}
