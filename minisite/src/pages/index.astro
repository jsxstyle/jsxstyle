---
import { Box } from "@jsxstyle/astro";
import TwoColumnContainer from "~/components/TwoColumnContainer.astro";
import Layout from "~/layouts/Layout.astro";
import { styleConstants } from "~/utilities/constants";
---

<Layout>
  <TwoColumnContainer
    height="100%"
    overflow="hidden"
    backgroundColor={styleConstants.color.insetBackground}
    gap={2}
  >
    <Box
      slot="left"
      backgroundColor={styleConstants.color.editorBackground}
      flex="1 1 auto"
      border="none"
      width="100%"
      height="100%"
      component="iframe"
      props={{
        title: "Code Editor",
        src: "/code-editor",
      }}
    />

    <Box
      slot="right"
      flex="1 1 auto"
      border="none"
      width="100%"
      height="100%"
      component="iframe"
      props={{
        title: "Code Preview",
        src: "/code-preview",
      }}
    />
  </TwoColumnContainer>
</Layout>
