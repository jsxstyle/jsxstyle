---
import { Box } from "@jsxstyle/astro";
import MultiColumnContainer from "~/components/MultiColumnContainer.astro";
import Layout from "~/layouts/Layout.astro";
import { styleConstants } from "~/utilities/constants";
---

<Layout>
  <MultiColumnContainer
    height="100%"
    overflow="hidden"
    backgroundColor={styleConstants.color.insetBackground}
    gap={2}
  >
    <Box
      backgroundColor={styleConstants.color.editorBackground}
      border="none"
      width="100%"
      height="100%"
      component="iframe"
      props={{
        title: "Code Editor",
        src: "/code-editor",
      }}
    />

    <Box
      border="none"
      width="100%"
      height="100%"
      component="iframe"
      props={{
        title: "Code Preview",
        src: "/code-preview",
      }}
    />
  </MultiColumnContainer>
</Layout>
