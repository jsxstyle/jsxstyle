{
  "name": "jsxstyle-monorepo",
  "description": "The monorepo for jsxstyle and tools built for jsxstyle",
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/smyte/jsxstyle#readme",
  "scripts": {
    "build": "npm run reset && rollup -c && npm run tsc && prettier --write \"packages/{*,*/*}/lib/**/*.js\"",
    "eslint": "eslint {packages/*/{*,*/*},examples/{*,*/*}}.js",
    "jest": "npm run build && jest --verbose --runInBand",
    "karma": "karma start",
    "karma_local": "KARMA_LOCAL=yep karma start",
    "lerna_clean": "lerna clean",
    "lerna_updated": "lerna updated",
    "postinstall": "lerna bootstrap",
    "prettier": "prettier --write \"{packages/**/*,examples/**/*}.{js,ts,tsx,css,md}\"",
    "release": "npm run eslint && npm run jest && lerna publish",
    "reset": "rimraf packages/{*,*/*}/lib/",
    "rollup_watch": "npm run reset && rollup -c -w;",
    "tsc": "tsc -p packages/jsxstyle-loader/tsconfig.json",
    "update_readme": "echo \"$(<./misc/monorepo-preamble.md)\\n\\n---\\n\\n$(<./packages/jsxstyle/README.md)\" > README.md",
    "update_sauce_data": "curl https://saucelabs.com/rest/v1/info/platforms/appium > saucelabs-data.json"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/invariant": "^2.2.29",
    "@types/karma": "^1.7.3",
    "@types/lodash": "^4.14.106",
    "@types/node": "^9.6.5",
    "@types/react": "^16.3.10",
    "@types/webpack": "^4.1.3",
    "@types/webpack-env": "^1.13.6",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-jest-hoist": "^22.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "core-js": "^2.5.1",
    "css-loader": "^0.28.9",
    "dotenv": "^5.0.1",
    "eslint": "^4.16.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-typescript": "^0.11.0",
    "fs-extra": "^5.0.0",
    "invariant": "^2.2.4",
    "jasmine-core": "^2.99.1",
    "jest": "^22.1.4",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-fail-fast-reporter": "^1.0.5",
    "karma-jasmine": "^1.1.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lerna": "^2.10.1",
    "mini-css-extract-plugin": "^0.4.0",
    "preact": "^8.2.6",
    "prettier": "^1.12.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript2": "^0.13.0",
    "rollup-plugin-uglify": "^3.0.0",
    "style-loader": "^0.20.1",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^14.0.0",
    "webpack": "^4.5.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "watchman": false,
    "testMatch": [
      "<rootDir>/tests/**/*.spec.js"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ]
  },
  "eslintIgnore": [
    "*.amd.js",
    "*.cjs.js",
    "*.es.js",
    "node_modules"
  ]
}
