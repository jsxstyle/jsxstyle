{
  "name": "jsxstyle-monorepo",
  "description": "The monorepo for jsxstyle and tools built for jsxstyle",
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/smyte/jsxstyle#readme",
  "scripts": {
    "clean": "lerna clean",
    "eslint": "eslint {packages/*/{*,*/*},examples/{*,*/*}}.js",
    "jest": "npm run rollup && jest --verbose --runInBand",
    "karma": "karma start",
    "karma_local": "KARMA_LOCAL=yep karma start",
    "mktypes": "./misc/mktypes.js > ./packages/jsxstyle/CSSProperties.d.ts",
    "postinstall": "lerna bootstrap",
    "prettier": "prettier --write {packages/*/{*,*/*},examples/{*,*/*}}.js",
    "reset": "rimraf packages/{*,*/*}/{jsxstyle*.{es,cjs}.js,**/*.d.ts}",
    "release": "lerna publish",
    "rollup": "npm run reset && npm run mktypes && rollup -c && prettier --write packages/{*,*/*}/jsxstyle*.{es,cjs}.js",
    "rollup_watch": "npm run reset && npm run mktypes && rollup -c -w;",
    "start": "webpack-dev-server --hot --hotOnly --inline --historyApiFallback --config=example/webpack.config.js",
    "update_readme": "echo \"$(<./misc/monorepo-preamble.md)\\n\\n---\\n\\n$(<./packages/jsxstyle/README.md)\" > README.md"
  },
  "dependencies": {
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-jest-hoist": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "core-js": "^2.5.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "jasmine-core": "^2.8.0",
    "jest": "^21.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "lerna": "^2.5.1",
    "preact": "^8.2.6",
    "prettier": "^1.7.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.8",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript2": "^0.8.1",
    "rollup-plugin-uglify": "^2.0.1",
    "style-loader": "^0.19.0",
    "typescript": "^2.6.1",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "prettier": {
    "single-quote": true,
    "trailing-comma": "es5"
  },
  "jest": {
    "transform": {
      ".js": "<rootDir>/misc/jestBabelTransform.js"
    },
    "watchman": false,
    "testMatch": [
      "<rootDir>/packages/*/tests/*.spec.js"
    ]
  },
  "eslintIgnore": [
    "*.cjs.js",
    "*.es.js",
    "node_modules"
  ],
  "devDependencies": {
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.25",
    "@types/webpack-env": "^1.13.2"
  }
}
