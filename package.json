{
  "name": "jsxstyle-monorepo",
  "description": "The monorepo for jsxstyle and tools built for jsxstyle",
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/jsxstyle/jsxstyle#readme",
  "scripts": {
    "build": "npm run reset && rollup -c && npm run tsc && prettier --write \"packages/{*,*/*}/lib/**/*.{js,ts}\"",
    "example": "ts-node examples/run.ts",
    "jest": "npm run build && npm run --prefix tests jest",
    "jest-update-snapshot": "npm run build && npm run --prefix tests jest-update-snapshot",
    "lerna-clean": "lerna clean",
    "lerna-updated": "lerna updated",
    "postinstall": "lerna bootstrap && npm --prefix tests install",
    "prettier": "prettier --write \"{packages/**/*,examples/**/*}.{js,ts,tsx,css,md}\"",
    "release": "npm run jest && lerna publish",
    "reset": "rimraf packages/{*,*/*}/lib/",
    "tsc": "tsc -p packages/jsxstyle-webpack-plugin/tsconfig.json",
    "tslint": "tslint",
    "tslint-all": "find . -type f -name 'tsconfig.json' -not -path '*/node_modules/*' -exec echo {} \\; -exec tslint -p {} \\;",
    "update-readme": "echo \"$(<./misc/monorepo-preamble.md)\\n\\n---\\n\\n$(<./packages/jsxstyle/README.md)\" > README.md"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/invariant": "^2.2.29",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.3.4",
    "@types/react": "^16.3.14",
    "@types/webpack": "^4.4.0",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "fs-extra": "^6.0.1",
    "inquirer": "^6.0.0",
    "lerna": "^2.11.0",
    "preact": "^8.2.6",
    "prettier": "^1.12.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.0",
    "rollup-plugin-typescript2": "^0.15.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
